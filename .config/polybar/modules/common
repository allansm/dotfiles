[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = 
label-occupied-padding = 1

label-urgent =
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /
mount-1 = /run/media/allansm/games
mount-2 = /run/media/allansm/data
#format-mounted = <label-mounted> <bar-used>
format-mounted = <bar-used>
label-mounted =
bar-used-indicator =
bar-used-width = 11
bar-used-foreground-0 = ${colors.primary}
bar-used-fill ="█"
bar-used-empty ="░"
bar-used-empty-foreground = ${colors.primary}

label-unmounted = "░░░░░░░░░░"
label-unmounted-foreground = ${colors.disabled}

[module/xkeyboard]
type = internal/xkeyboard

label-layout = %layout%
label-layout-foreground = ${colors.primary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.primary}

[module/memory]
type = internal/memory

interval = 1

warn-percentage = 95
format = <label> <bar-used>
label = RAM

bar-used-indicator =
bar-used-width = 11
bar-used-foreground-0 = ${colors.primary}
bar-used-fill ="█"
bar-used-empty ="░"
bar-used-empty-foreground = ${colors.primary}

[module/cpu]
type = internal/cpu

interval = 1
format = <label> <bar-load>

bar-load-indicator =
bar-load-width = 11
bar-load-foreground-0 = ${colors.primary}
bar-load-fill ="█"
bar-load-empty ="░"
bar-load-empty-foreground = ${colors.primary}

label = CPU 

[module/pulseaudio]
type = internal/pulseaudio

label-volume = VOL

interval = 3
format-volume = <label-volume> <bar-volume>

bar-volume-indicator =
bar-volume-width = 11
bar-volume-foreground-0 = ${colors.primary}
bar-volume-fill ="█"
bar-volume-empty ="░"
bar-volume-empty-foreground = ${colors.primary}

click-right = pavucontrol

label-muted = VOL ░░░░░░░░░░
label-muted-foreground = ${colors.disabled}

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#F0C674}%ifname%%{F-} %essid% %local_ip%

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %{F#F0C674}%ifname%%{F-} %local_ip%

[module/date]
type = internal/date
interval = 60

date = %H:%M

label = %date%
label-foreground = ${colors.primary}
