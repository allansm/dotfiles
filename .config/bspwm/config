gap(){
	bspc config window_gap $@
	#wal -Rn
}

border(){
	bspc config border_width $@
}

border_color(){
	bspc config active_border_color $1
	bspc config normal_border_color $1
	bspc config focused_border_color $1
}

bstop(){
	bspc config top_padding $@
}

bsbottom(){
	bspc config bottom_padding $@
}

margin(){
	bspc config top_padding $@
	bspc config right_padding $@
	bspc config left_padding $@
	bspc config bottom_padding $@
}

bg(){
	cp $@ ~/.wallpaper
	feh --bg-fill ~/.wallpaper
}

theme(){
	wal -i $@
	#cp $@ ~/.wallpaper
	feh --bg-fill ~/.wallpaper
	source ~/.cache/wal/colors.sh
	export color10=$color10
	export foreground=$foreground
	export background=$background
	bspc config normal_border_color $background
	bspc config focused_border_color $foreground
	bspc config presel_feedback_color $color10
	killall dunst 
	dunst -config <(envsubst < ~/.config/dunst/dunstrc) 1>/dev/null 2>&1 &
}

bs(){
	killall polybar
	killall picom
	
	bspc config window_gap $1
	bspc config top_padding $2
	bspc config left_padding $3
	bspc config right_padding $4
	bspc config bottom_padding $5
	bspc config border_radius $6
	bspc config border_width $7
	
	polybar $8 1>/dev/null 2>&1 &
	picom --corner-radius $6 1>/dev/null 2>&1 &
	
	

	echo "bspc config window_gap $1" > ~/.config/bspwm/appearance
	echo "bspc config top_padding $2" >> ~/.config/bspwm/appearance
	echo "bspc config left_padding $3" >> ~/.config/bspwm/appearance
	echo "bspc config right_padding $4" >>  ~/.config/bspwm/appearance
	echo "bspc config bottom_padding $5" >> ~/.config/bspwm/appearance
	echo "bspc config border_radius $6" >> ~/.config/bspwm/appearance
	echo "bspc config border_width $7" >>  ~/.config/bspwm/appearance
	
	echo "polybar $8 1>/dev/null 2>&1 &" >> ~/.config/bspwm/appearance
	echo "picom --corner-radius $6 1>/dev/null 2>&1 &" >> ~/.config/bspwm/appearance

}

bsfill(){
	bs 0 32 0 0 0 0 0 fill
}

bsfull(){
	bs 0 0 0 0 0 0 0
}

bsdefault(){
	bs 5 37 0 0 0 16 2 main
}

bsquare(){
	bs 5 37 0 0 0 0 0 main
}

bsnobar(){
	bs 15 0 0 0 0 16 2
}

bscenter(){
	bs 5 50 50 50 50 16 2
}

bscenterf(){
	bs 5 50 50 50 50 0 0 fill
	bsradius 16
}

bsfloat(){
	bspc rule -a "*" state=floating sticky
}

bstile(){
	bspc rule -a "*" state=tiled
}

