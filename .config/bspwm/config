gap(){
	bspc config window_gap $@
}

border(){
	bspc config border_width $@
}

border_color(){
	bspc config active_border_color $1
	bspc config normal_border_color $1
	bspc config focused_border_color $1
}

bstop(){
	bspc config top_padding $@
}

bsbottom(){
	bspc config bottom_padding $@
}

bg(){
	cp $@ ~/.wallpaper
	feh --bg-fill ~/.wallpaper
}

theme(){
	wal -i $@
	#cp $@ ~/.wallpaper
	feh --bg-fill ~/.wallpaper
	source ~/.cache/wal/colors.sh
	export color10=$color10
	export foreground=$foreground
	export background=$background
	bspc config normal_border_color $color10
	bspc config focused_border_color $color10
	bspc config presel_feedback_color $color10
	killall dunst && dunst -config <(envsubst < ~/.config/dunst/dunstrc) 1>/dev/null 2>&1 &
}

bsfill(){
	killall polybar
	polybar fill 1>/dev/null 2>&1 &
	bspc config top_padding 34
	bspc config left_padding 0
	bspc config right_padding 0
	bspc config bottom_padding 0
	bspc config window_gap 0
	killall picom
}

bsdefault(){
	killall polybar
	bspc config window_gap 5
	bspc config top_padding 39
	bspc config left_padding 0
	bspc config right_padding 0
	bspc config bottom_padding 0
	polybar main 1>/dev/null 2>&1 &
	picom 1>/dev/null 2>&1 &
}

bsnobar(){
	killall polybar
	bspc config window_gap 15
	bspc config top_padding 0
	bspc config left_padding 0
	bspc config right_padding 0
	bspc config bottom_padding 0
	picom 1>/dev/null 2>&1 &
}

bscenter(){
	killall polybar
	bspc config window_gap 5
	bspc config top_padding 50
	bspc config left_padding 50
	bspc config right_padding 50
	bspc config bottom_padding 50
	picom 1>/dev/null 2>&1 &
}
